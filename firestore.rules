
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own user document.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to create, read, and list their own reports.
      match /reports/{reportId} {
        allow create, read: if request.auth != null && request.auth.uid == userId;
      }
      
      // Explicitly allow listing reports for the owner.
      allow list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
