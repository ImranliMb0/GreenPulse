
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own user document.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Rules for the 'reports' subcollection
      match /reports/{reportId} {
        // Allow users to create and read their own reports.
        allow create, read: if request.auth != null && request.auth.uid == userId;
        // Allow users to list their own reports.
        allow list: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
